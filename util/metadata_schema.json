{
  "$id": "https://example.com/person.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "required": [
    "minzoom",
    "maxzoom"
  ],
  "definitions": {
    "zoomlevel": {
      "type": "integer",
      "minimum": 0,
      "maximum": 24
    },
    "epsg": {
      "type": "string",
      "pattern": "^(epsg|EPSG):\\d{4,5}$"
    }
  },
  "properties": {
    "crs": {
      "$ref": "#/definitions/epsg",
    },
    "srs": {
      "$ref": "#/definitions/epsg"
    },
    "minzoom": {
      "$ref": "#/definitions/zoomlevel"
    },
    "maxzoom": {
      "$ref": "#/definitions/zoomlevel"
    },
    "scheme": {
      "type": "string",
      "enum": [
        "tms",
        "xyz"
      ]
    }
  },
  "anyOf":  [
    {
      "not": {
        "required": [
          "crs",
          "srs"
        ]
      }
    }
  ]
}